---
import { Image } from 'astro:assets'

import allerthsBageriLogo from '$assets/allerths-bageri-logo.jpeg'
import { SITE_NAME } from '$lib/constants'
---

<nav class="flex items-center justify-between py-2 px-4 shadow-sm">
  <a class="flex items-center gap-4" href="/">
    <Image
      src={allerthsBageriLogo}
      alt="Profilbild för Allerths Bageri"
      class="size-12 rounded-full object-cover shadow-md"
      priority
    />
    <h1 class="font-display text-3xl xs:text-4xl font-bold pt-2">
      {SITE_NAME}
    </h1>
  </a>

  <ul class="flex items-center gap-4">
    <li>
      <a href="/bokning" class="h-auto mx-auto px-4 py-2 border rounded-md">
        Boka ditt bröd!
      </a>
    </li>
  </ul>
</nav>
