---
import '@fontsource/italianno'
import '@fontsource/quattrocento'

import Navbar from '$components/Navbar.astro'
import Footer from '$components/Footer.astro'
import { SITE_NAME } from '$lib/constants'
import { cn } from '$lib/utils'
import '../styles/global.css'

type Props = {
  class?: string
  header?: boolean
  footer?: boolean
}

let { class: className = '', header = true, footer = true } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-pt-4">
  <head>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta
      name="description"
      content="Välkommen till min hemsida om bakning, friskvård, örter och hälsa. I naturen finns mängder av läkeörter som förbättrar vår hälsa på ett hållbart sätt. Jag anordnar örtvandringar där du kan lära dig mer om vad du kan äta eller annars ha användning av från naturen. Jag är också utbildad körpedagog och driver friskvårdskör som främjar hälsan."
    />
    <meta
      name="keywords"
      content="friskvård, bröd, surdeg, örter, hälsa, läkemedel, bakning, kör, sång, gemenskap, hållbarhet, livsstil, allerth, bageri, vilka växter i naturen kan man äta?, hälsosamma växter, hälsosamma växter från naturen, baka med växter från naturen, baka med växter från skogen, emmer"
    />
    <meta name="author" content="Maggan Allerth" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="theme-color" content="#FFFFFF" />

    <title>{SITE_NAME}</title>
  </head>
  <body class="font-serif! bg-background text-foreground">
    {header && <Navbar />}

    <main class={cn('mx-auto w-full', className)}>
      <slot />
    </main>

    {footer && <Footer />}
  </body>
</html>
