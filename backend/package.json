{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --experimental-strip-types --experimental-transform-types --env-file=.env --watch src/server.ts",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "db": "drizzle-kit",
    "db:seed": "node --experimental-strip-types --experimental-transform-types --env-file=.env src/db/seed.ts",
    "db:reset": "node --experimental-strip-types --experimental-transform-types --env-file=.env src/db/reset.ts"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "better-sqlite3": "^11.7.0",
    "cookie": "^1.0.2",
    "drizzle-orm": "^0.38.3",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "libphonenumber-js": "^1.11.17",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.3",
    "drizzle-kit": "^0.30.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#utils/*": "./src/utils/*",
    "#db/*": "./src/db/*"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2
  }
}
