{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env --watch src/server.ts",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "db": "drizzle-kit",
    "db:seed": "node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env src/db/seed.ts",
    "db:reset": "node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env scripts/reset-db.ts",
    "test:setup": "node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env.test ./src/test.setup.ts",
    "test": "node --run test:setup && node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env.test --test",
    "test:only": "node --run test:setup && node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env.test --test --test-only",
    "test:watch": "node --run test:setup && node --no-warnings=ExperimentalWarning --experimental-strip-types --env-file=.env.test --test --watch"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "better-sqlite3": "^12.4.1",
    "cookie": "^1.0.2",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^5.1.0",
    "libphonenumber-js": "^1.12.23",
    "pino": "^9.13.1",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.7.0",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#utils/*": "./src/utils/*",
    "#db/*": "./src/db/*",
    "#src/*": "./src/*"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2
  }
}
