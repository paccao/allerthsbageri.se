{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --env-file=.env --watch src/server.ts",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "db": "drizzle-kit",
    "db:seed": "node --env-file=.env src/db/dev-seed.ts",
    "db:reset": "node --env-file=.env scripts/reset-db.ts",
    "test:setup": "node --env-file=.env.test ./src/test.setup.ts",
    "test": "node --env-file=.env.test --test --experimental-test-module-mocks --disable-warning=ExperimentalWarning --test-reporter ./src/utils/test-reporter.ts",
    "test:only": "node --env-file=.env.test --test --test-only --experimental-test-module-mocks --disable-warning=ExperimentalWarning --test-reporter ./src/utils/test-reporter.ts",
    "test:watch": "node --env-file=.env.test --test --watch --experimental-test-module-mocks --disable-warning=ExperimentalWarning --test-reporter ./src/utils/test-reporter.ts",
    "test:only:watch": "node --env-file=.env.test --test --test-only --watch --experimental-test-module-mocks --disable-warning=ExperimentalWarning --test-reporter ./src/utils/test-reporter.ts"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "better-sqlite3": "^12.5.0",
    "cookie": "^1.1.1",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "libphonenumber-js": "^1.12.29",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "prettier": "3.6.2",
    "typescript": "^5.9.3"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#utils/*": "./src/utils/*",
    "#db/*": "./src/db/*",
    "#src/*": "./src/*"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2
  }
}
